<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/first_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/nanumbarungothic"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="이 신발은..."/>

        <TextView
            app:layout_constraintTop_toTopOf="@+id/first_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:id="@+id/result_shoes_name"
            android:background="@color/SiamBlack"
            android:textColor="@color/AnzsRealWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="신발 이름"/>

        <TextView
            app:layout_constraintTop_toTopOf="@id/result_shoes_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            android:id="@+id/result_shoes_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center"
            android:text="100%"/>
</androidx.constraintlayout.widget.ConstraintLayout>